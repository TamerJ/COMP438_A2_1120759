<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.dell.comp438_a2_11207592.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:id="@+id/SolutionText"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textSize="60dp"
        android:gravity="right"
        android:padding="15dp"
        android:layout_marginBottom="8dp"/>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_row="1"
        android:layout_column="0"
        android:orientation="vertical"
        android:layout_below="@+id/SolutionText"
        android:background="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:text="C"
            android:id="@+id/btn_c"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0"

            android:textColor="#ffffff"
            android:background="#000000"
            android:clickable="false"
            android:focusable="false"
            android:onClick="onClick"
            android:enabled="false" />

        <Button
            android:text="MC"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:id="@+id/btn_mc"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="onClick" />

        <Button
            android:text="MR"
            android:id="@+id/btn_mr"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="onClick" />

        <Button
            android:text="M+"
            android:id="@+id/btn_mplus"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="onClick" />

        <Button
            android:text="Back"
            android:id="@+id/btn_back"
            android:textStyle="bold"
            android:layout_gravity="fill"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="onClick" />

        <Button
            android:text="N"
            android:textStyle="bold"
            android:id="@+id/btn_n"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="onClick" />

        <Button
            android:text="/"
            android:textStyle="bold"
            android:id="@+id/btn_div"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="3"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="onClick" />

        <Button
            android:text="7"
            android:textStyle="bold"
            android:id="@+id/btn_7"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:text="8"
            android:textStyle="bold"
            android:id="@+id/btn_8"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:text="9"
            android:textStyle="bold"
            android:id="@+id/btn_9"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:text="x"
            android:id="@+id/btn_mul"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="onClick" />

        <Button
            android:text="4"
            android:textStyle="bold"
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:text="5"
            android:textStyle="bold"
            android:id="@+id/btn_5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:text="6"
            android:id="@+id/btn_6"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="2"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:text="-"
            android:id="@+id/btn_min"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:textStyle="bold"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="onClick" />

        <Button
            android:text="1"
            android:textStyle="bold"
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:text="2"
            android:textStyle="bold"
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:text="3"
            android:textStyle="bold"
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="30sp"
            android:onClick="onClick" />

        <Button
            android:text="+"
            android:textStyle="bold"
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="3"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="onClick" />

        <Button
            android:text="0"
            android:id="@+id/btn_0"
            android:textStyle="bold"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textSize="30sp"
            android:background="#91B2F2"
            android:onClick="onClick" />

        <Button
            android:text="="
            android:id="@+id/btn_equ"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="5"
            android:layout_column="3"
            android:textSize="30sp"
            android:background="#A69A77"
            android:onClick="onClick" />
    </GridLayout>





</RelativeLayout>